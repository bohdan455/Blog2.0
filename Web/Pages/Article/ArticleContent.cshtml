@page "{id?}"
@model Web.Pages.Article.ArticleContentModel
@{
}
@if (!string.IsNullOrEmpty(Model.ArticleModel.ImageUrl))
{
    <img src="@Model.ArticleModel.ImageUrl"/>
}
<h1>@Model.ArticleModel.Title</h1>
@Model.ArticleModel.Body
<form class="mt-4" method="post">
    <input class="btn btn-primary" type="submit" value="Like" />
</form>
<span>Likes: @Model.Likes</span>