@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="list-group">
    @foreach (var article in Model.ArticleModels)
    {
        <a asp-page="/Article/ArticleContent" asp-route-id = "@article.Id" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@article.Title</h5>
            </div>
            <p class="mb-1">@(article.Body.Length > 101 ? article.Body.Substring(0,90) + "..." : article.Body)</p>
            <small>@@@article.Author.UserName</small>
        </a>
    }
</div>